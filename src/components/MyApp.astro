---
const response = await fetch('https://valorant-api.com/v1/agents');
const valAgents = await response.json();
---

<h1>Valorant Agents</h1>

<div class="flex flex-wrap gap-4 m-8">
  {
    valAgents.data.map(agent => 
      <div class="card card-gradient w-96 shadow-xl">
        <figure>
          <img
            src={agent.fullPortrait}
            alt={agent.displayName} />
        </figure>
        <div class="card-body">
          <h2 class="card-title">
            {agent.displayName}
            <div class="badge badge-secondary">{agent.role}</div>
          </h2>
          <p>{agent.description}</p>
          <div class="card-actions justify-end">
            <div class="badge badge-outline">{agent.abilities[0].displayName}</div>
            <div class="badge badge-outline">{agent.abilities[1].displayName}</div>
            <div class="badge badge-outline badge-secondary">{agent.abilities[2].displayName}</div>
            <div class="badge badge-outline badge-primary">{agent.abilities[3].displayName}</div>
          </div>
        </div>
      </div>
    )
  }
</div>